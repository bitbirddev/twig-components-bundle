{% if sources.status is defined %}
    <media-encoding-status {{ attributes }} previewImageUrl="{{ poster }}" status="{{ sources.status }}" processId="{{ sources.processId }}"  style="aspect-ratio: 16/9" />
{% endif %}
{% if sources.0 is defined %}
    <consent-wall {{ attributes }} previewImageUrl="{{ poster }}" requiredConsents="{{ consents|json_encode }}">
    {% if sources.0.type == "video/vimeo" %}
        <iframe class="vimeo-player"
                src="{{ sources.0.src }}"
                frameborder="0"
                allow="autoplay; fullscreen; picture-in-picture"
                style="position:absolute;
                       top:0;
                       left:0;
                       width:100%;
                       height:100%"></iframe>
    {% elseif sources.0.type == "video/facebook" %}
        <div class="fb-video w-full"
             data-href="{{ sources.0.src }}"
             data-show-captions="true"
             data-lazy="true"
             data-allowfullscreen="true"
             style="position:absolute;
                    right:0;
                    bottom: 0;
                    top:0;
                    left:0;
                    width:100%;
                    height:100%"></div>
    {% else %}
        <media-player>
        {% if poster %}<media-poster class="vds-poster" src="{{ poster }}"></media-poster>{% endif %}
        <media-provider>
        {% for source in sources %}<source src="{{ source.src }}" type="{{ source.type }}" />{% endfor %}
        </media-provider>
        <media-video-layout></media-video-layout>
        <media-audio-layout></media-audio-layout>
        </media-player>
        {% if copyright %}<div class="mt-1 text-gray-400 text-sm flex justify-end">Â© {{ copyright }}</div>{% endif %}
    {% endif %}
    </consent-wall>
{% endif %}
